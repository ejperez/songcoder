{
  "name": "songcoder",
  "version": "1.0.0",
  "description": "Chord sheet maker",
  "main": "index.js",
  "dependencies": {
    "jquery": "^3.2.1"
  },
  "devDependencies": {
    "jshint": "^2.9.5",
    "node-sass": "^4.5.3",
    "uglify-js": "^3.0.21"
  },
  "scripts": {
    "build": "npm run build:js && npm run build:sass && npm run build:print-css",
    "build:js": "cat bower_components/jquery/dist/jquery.js assets/js/*.js | uglifyjs --mangle > dist/js/scripts.min.js",
    "prebuild:js": "npm run lint",
    "build:sass": "cat assets/sass/*.scss assets/css/*.css | node-sass --output-style compressed > dist/css/styles.min.css",
    "build:print-css": "cat assets/print-css/*.css | node-sass --output-style compressed > dist/css/print.min.css",
    "lint": "jshint assets/js/*.js || true"
  },
  "author": "EJ Perez",
  "license": "ISC"
}